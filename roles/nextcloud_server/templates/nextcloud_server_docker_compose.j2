version: '3.7'

services:
  proxy:
    build: ./proxy
    ports:
      - 80:80
      - 443:443
    labels:
      com.github.jrcs.letsencrypt_nginx_proxy_companion.nginx_proxy: "true"
    volumes:
      - ~/synced/nextcloud/for_https/certs:/etc/nginx/certs:ro
      - ~/synced/nextcloud/for_https/vhost.d:/etc/nginx/vhost.d
      - ~/synced/nextcloud/for_https/html:/usr/share/nginx/html
      - /var/run/docker.sock:/tmp/docker.sock:ro
    restart: unless-stopped

  letsencrypt-companion:
    image: nginxproxy/acme-companion
    restart: always
    volumes:
      - ~/synced/nextcloud/for_https/certs:/etc/nginx/certs
      - ~/synced/nextcloud/for_https/vhost.d:/etc/nginx/vhost.d
      - ~/synced/nextcloud/for_https/html:/usr/share/nginx/html
      - ~/synced/nextcloud/for_https/acme:/etc/acme.sh
      - /var/run/docker.sock:/var/run/docker.sock:ro
    environment:
      - DEFAULT_EMAIL={{lets_encrypt_mail}}
    depends_on:
      - proxy

  nextcloud:
    image: nextcloud:27
    user: "{{uid}}:{{gid}}"
    hostname: {{nextcloud_url}}
    # ports:
    #   - 80:80
    volumes:
      - ~/synced/nextcloud/var/www/html:/var/www/html
    depends_on:
      - db
    environment:
      - MYSQL_PASSWORD=1qwer5432
      - MYSQL_DATABASE=nextcloud
      - MYSQL_USER=nextcloud
      - MYSQL_HOST=db
      - VIRTUAL_HOST={{nextcloud_url}}
      # - VIRTUAL_PORT=80
      - LETSENCRYPT_HOST={{nextcloud_url}}
    restart: unless-stopped

  db:
    image: mariadb:10.5.10
    #restart: always
    environment:
      - MYSQL_ROOT_PASSWORD=1qwer5432
      - MYSQL_PASSWORD=1qwer5432
      - MYSQL_DATABASE=nextcloud
      - MYSQL_USER=nextcloud
    volumes:
      - ~/synced/mariadb/var/lib/mysql:/var/lib/mysql
    command: --transaction-isolation=READ-COMMITTED --binlog-format=ROW
    restart: unless-stopped
    #user: 113:118

